<resources>

    <style name="Base.Theme.LolFamousMatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorOnPrimary">#111111</item>
        <item name="colorPrimaryDark">#E0E0E0</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorAccent">#6E608B</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorSecondary">#8B607D</item>
        <item name="android:colorBackground">#FFFFFF</item>
    </style>

    <style name="Theme.LolFamousMatch" parent="Base.Theme.LolFamousMatch"/>

    <style name="Theme.LolFamousMatch.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LolFamousMatch.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.LolFamousMatch.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="MatchList.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBig">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextSmall">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextListBig">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListNormal">
        <item name="android:textAppearance">?attr/textAppearanceListItemSmall</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>